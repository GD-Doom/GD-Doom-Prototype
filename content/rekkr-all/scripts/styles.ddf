<STYLES>

#FORCEPATCHMENUS

[DIALOG] //exit EDGE message
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="DEFAULT";
TITLE.FONT="DEFAULT";


[MENU] //default style for menu
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=30%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="DEFAULT";
ALT.FONT="DEFAULT";
ALT.COLOURMAP="TEXT_YELLOW";
TITLE.FONT="DEFAULT";
TITLE.COLOURMAP="TEXT_WHITE";
HELP.FONT="DEFAULT";
HELP.COLOURMAP="TEXT_GREEN";


[MAIN_MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="DEFAULT";
TEXT.SCALE=1.0;
ENTRY_SPACING = 5;
Y_OFFSET = -10;

[CHOOSE_SKILL]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
TITLE.FONT="DEFAULT";
TITLE.SCALE=1.0;
TEXT.FONT="DEFAULT"; //"DEFAULT";
TEXT.SCALE=0.9;

[CHOOSE_EPISODE]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
//X_OFFSET=44;
Y_OFFSET=-1;
ENTRY_SPACING = 2;
CURSOR.IMAGE="M_SKULL3";

//Now both Load and Save menu use the same style entry
//This one behaves different to other styles because as it's
//considered a System menu, I experimented with new ways
//of doing things.
[LOAD_SAVE_MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=55%;
SPECIAL=STRETCH_FULLSCREEN;
ENTRY_SPACING=4;
HEADER.FONT="OPTIONS"; //"Load game"
HEADER.SCALE=2.0;
HEADER.COLOURMAP="TEXT_GREY";
// save name & slot block
TEXT.FONT="OPTIONS"; 
TEXT.COLOURMAP="TEXT_GREY";
TEXT.SCALE=1.9;
TEXT.X_OFFSET=20;
TEXT.Y_OFFSET=40;
// save info text block
HELP.FONT="OPTIONS"; 
HELP.COLOURMAP="TEXT_YELLOW";
HELP.SCALE=1.1;
HELP.X_OFFSET=210;
HELP.Y_OFFSET=40;
// next page text block
TITLE.FONT="OPTIONS"; 
TITLE.COLOURMAP="TEXT_YELLOW";
TITLE.SCALE=1.5;
TITLE.X_OFFSET=20;
TITLE.Y_OFFSET=160;
ALT.FONT="OPTIONS";  // when we edit the save name
ALT.COLOURMAP="TEXT_YELLOW";
ALT.SCALE=1.85;
// selected slot text
SELECTED.FONT="OPTIONS";
SELECTED.COLOURMAP="TEXT_YELLOW";
SELECTED.SCALE=1.92;

[OPTIONS] //all the other option menus
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.SCALE=1.2;
TEXT.FONT="OPTIONS"; //items and header
TEXT.SCALE=1.1;
TEXT.COLOURMAP="TEXT_GREY";
ALT.FONT="OPTIONS"; //values
ALT.SCALE=1.1;
ALT.COLOURMAP="TEXT_WHITE";
TITLE.FONT="OPTIONS"; //Selected text
TITLE.SCALE=1.12;
TITLE.COLOURMAP="TEXT_YELLOW";
HELP.FONT="OPTIONS"; //help tip at bottom of screen
HELP.COLOURMAP="TEXT_YELLOW";
HELP.SCALE=1.1;

[HOST_NETGAME]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.FONT="OPTIONS"; //items
HEADER.COLOURMAP="TEXT_GREY";
HEADER.SCALE=1.25;
TEXT.FONT="OPTIONS"; //items
TEXT.COLOURMAP="TEXT_GREY";
TEXT.SCALE=1.1;
ALT.FONT="OPTIONS"; //values / slider chars
ALT.COLOURMAP="TEXT_WHITE";
ALT.SCALE=1.1;
TITLE.FONT="OPTIONS"; //Selected text
TITLE.COLOURMAP="TEXT_YELLOW";
TITLE.SCALE=1.12;
HELP.FONT="OPTIONS"; //help tip at bottom of screen
HELP.COLOURMAP="TEXT_YELLOW"; //"TEXT_GREEN";
HELP.SCALE=1.1;


[STATS] //INTERMISSION Finished/Entering level screen
TITLE.FONT="DEFAULT";//Finished/Entering text
TITLE.SCALE=0.8;
TEXT.FONT="DEFAULT";//map name/description
TEXT.COLOURMAP="TEXT_WHITE";
TEXT.SCALE=0.7;
ALT.FONT="DEFAULT"; // par times


[INTERLEVEL_TEXT] //Pre/End texts on certain INTERMISSION screens
TEXT.FONT="DEFAULT";//map description
//TEXT.COLOURMAP="TEXT_GREEN";
TEXT.SCALE=1.0;


[DEFAULT]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
//SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="DEFAULT";
ALT.FONT="DEFAULT";
TITLE.FONT="DEFAULT";
HELP.FONT="DEFAULT";


[MESSAGES]
TEXT.FONT="DEFAULT";

[CHAT]
TEXT.FONT="DEFAULT";
TEXT.COLOURMAP="TEXT_GREEN";

[AUTOMAP]
//BACKGROUND.COLOUR=#000000;
TEXT.FONT="DEFAULT";
ALT.FONT="AUTOMAP_DIGIT";

[NET_STATS]
TITLE.FONT="DEFAULT";
// leave title as red
TEXT.FONT="DEFAULT";
TEXT.COLOURMAP="TEXT_WHITE";
ALT.FONT="DEFAULT";   // alt used for highlighted player
ALT.COLOURMAP="TEXT_YELLOW";


[RTS_TIP]
TEXT.FONT="DEFAULT";

[CAST_SCREEN]
TEXT.FONT="DEFAULT";
TEXT.COLOURMAP="TEXT_YELLOW";



 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
