<COLOURMAPS>

[NORMAL]
lump = "COLORMAP";
start = 0;
length = 32;

// --- Powerup effects -------------

// For Heretics's invulnerability power-up you get a gold tinted screen instead of the monochrome white
[ALLWHITE]
gl_colour= #B0B000; 

// ----- Text Colour remaps ---------------

[TEXT_WHITE]
gl_colour = #FFFFFF;

[TEXT_GREY]
gl_colour = #AAAAAA;

[TEXT_GREEN]
gl_colour = #33FF33;

[TEXT_YELLOW]
gl_colour = #FFFF22;