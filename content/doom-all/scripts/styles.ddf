<STYLES>

#FORCEPATCHMENUS

[MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=30%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="DEFAULT";
ALT.FONT="DEFAULT";
ALT.COLOURMAP="TEXT_YELLOW";
TITLE.FONT="DEFAULT";
TITLE.COLOURMAP="TEXT_WHITE";
HELP.FONT="DEFAULT";
HELP.COLOURMAP="TEXT_GREEN";


[MAIN_MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="DEFAULT";
TEXT.SCALE=1.0;


[CHOOSE_SKILL]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.FONT="DEFAULT"; //"New Game"
HEADER.SCALE=1.1;
TITLE.FONT="DEFAULT"; // "Choose Skill"
TITLE.SCALE=0.9;
TEXT.FONT="DEFAULT"; //"I'm too young to die" etc.;
TEXT.SCALE=0.8;


[CHOOSE_EPISODE]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.FONT="DEFAULT"; //"Which Episode?"
HEADER.SCALE=1.1;
TEXT.FONT="DEFAULT"; //"Knee deep in the dead" etc.
TEXT.SCALE=0.9;

[LOAD_SAVE_MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=55%;
SPECIAL=STRETCH_FULLSCREEN;
ENTRY_SPACING=4;
HEADER.FONT="OPTIONS"; //"Load game"
HEADER.SCALE=2.0;
HEADER.COLOURMAP="TEXT_RED";
// save name & slot block
TEXT.FONT="OPTIONS"; 
TEXT.COLOURMAP="TEXT_GREY";
TEXT.SCALE=1.9;
TEXT.X_OFFSET=20;
TEXT.Y_OFFSET=40;
// save info text block
HELP.FONT="OPTIONS"; 
HELP.COLOURMAP="TEXT_YELLOW";
HELP.SCALE=0.9;
HELP.X_OFFSET=210;
HELP.Y_OFFSET=40;
// next page text block
TITLE.FONT="OPTIONS"; 
TITLE.COLOURMAP="TEXT_GREEN";
TITLE.SCALE=1.5;
TITLE.X_OFFSET=20;
TITLE.Y_OFFSET=160;
ALT.FONT="OPTIONS";  // when we edit the save name
ALT.COLOURMAP="TEXT_GREEN";
ALT.SCALE=1.85;
// selected slot text
SELECTED.FONT="OPTIONS";
SELECTED.COLOURMAP="TEXT_YELLOW";
SELECTED.SCALE=1.92;

[OPTIONS] //all the other option menus
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
SPECIAL=STRETCH_FULLSCREEN;
ENTRY_SPACING = -1;
HEADER.FONT="OPTIONS"; //header
HEADER.SCALE=1.2;
HEADER.COLOURMAP="TEXT_RED";
TEXT.FONT="OPTIONS"; //items
TEXT.SCALE=1.1;
TEXT.COLOURMAP="TEXT_RED";
ALT.FONT="OPTIONS"; //values / slider chars
ALT.SCALE=1.1;
ALT.COLOURMAP="TEXT_WHITE";
TITLE.FONT="OPTIONS"; //Selected text
TITLE.SCALE=1.12;
TITLE.COLOURMAP="TEXT_YELLOW";
HELP.FONT="OPTIONS"; //help tip at bottom of screen
HELP.COLOURMAP="TEXT_GREEN";
HELP.SCALE=1.1;


[STATS] //INTERMISSION Finished/Entering level screen
TITLE.FONT="DEFAULT";//Finished/Entering text
TITLE.SCALE=0.8;
TEXT.FONT="DEFAULT";//map name/description
TEXT.COLOURMAP="TEXT_WHITE";
TEXT.SCALE=0.7;
ALT.FONT="DEFAULT"; // par times
ALT.SCALE=0.85;


[CONSOLE]
BACKGROUND.COLOUR=#141414;
BACKGROUND.TRANSLUCENCY=85%;


[INTERLEVEL_TEXT]
TEXT.FONT="DEFAULT";//map description
TEXT.SCALE=1.0;


[CAST_SCREEN]
HEADER.SCALE=3; //Affects size of monster cast sprites
TEXT.FONT="DEFAULT";
TEXT.COLOURMAP="TEXT_YELLOW";


[MESSAGES] // "you picked up a clip" etc
TEXT.FONT="DEFAULT";
TEXT.SCALE=0.9;


[IMPORTANT_MESSAGES] //"You found a secret"
TEXT.FONT="DEFAULT";
TEXT.SCALE=1.0;


[EXIT_SCREEN] //exit EDGE message
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="DEFAULT";


//We can only define the TIP font. Size, colour etc should be via RTS
[RTS_TIP]
TEXT.FONT="DEFAULT"; 

[AUTOMAP]
TEXT.FONT="DEFAULT";
ALT.FONT="AUTOMAP_DIGIT";

[HOST_NETGAME]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
SPECIAL=STRETCH_FULLSCREEN;
ENTRY_SPACING = -1;
HEADER.FONT="OPTIONS"; //items
HEADER.COLOURMAP="TEXT_GREEN";
HEADER.SCALE=1.25;
TEXT.FONT="OPTIONS"; //items
TEXT.COLOURMAP="TEXT_RED";
TEXT.SCALE=1.1;
ALT.FONT="OPTIONS"; //values / slider chars
ALT.COLOURMAP="TEXT_WHITE";
ALT.SCALE=1.1;
TITLE.FONT="OPTIONS"; //Selected text
TITLE.COLOURMAP="TEXT_YELLOW";
TITLE.SCALE=1.1;
HELP.FONT="OPTIONS"; //help tip at bottom of screen
HELP.COLOURMAP="TEXT_YELLOW";
HELP.SCALE=1.1;


[NET_STATS]
TITLE.FONT="DEFAULT";
TEXT.FONT="DEFAULT";
TEXT.COLOURMAP="TEXT_WHITE";
ALT.FONT="DEFAULT";   // alt used for highlighted player
ALT.COLOURMAP="TEXT_YELLOW";
