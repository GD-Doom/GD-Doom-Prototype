<COLOURMAPS>

#VERSION 1.30

[FOG_BLUE]
GL_COLOUR = #0000D9;

[FOG_GREEN]
GL_COLOUR = #006619;

[FOG_RED]
GL_COLOUR = #B30000;

[FOG_YELLOW]
GL_COLOUR = #D9D900;

[FOG_PURPLE]
GL_COLOUR = #6C00D9;

[FOG_WHITE]
GL_COLOUR = #CACACA;

[BERSERK]
gl_colour = #FF7979; //red

[NORMAL]
lump = "COLORMAP";
start = 0;
length = 32;

// --- Powerup effects -------------

// For the invulnerability effect
[ALLWHITE]
lump = "COLORMAP";
start = 32;
length = 1;

// For the EDGE night-vision effect
[ALLGREEN]
gl_colour = #33FF33;

// --- Environment effects ------------

[WATER] // BLUE WATER HUE
gl_colour = #4682B4FF;
special = NO_FLASH;

[SLIME] // GREEN WATER HUE
GL_COLOUR = #008819;
special = NO_FLASH;

[LAVA] // RED WATER HUE
GL_COLOUR = #C40000;
special = NO_FLASH;

[YELLOW]
gl_colour = #FFFF00;

[PURPLE]
gl_colour = #8000FF;

[GREY]
gl_colour = #171717;

// ----- Text Colour remaps ---------------

[TEXT_RED]
gl_colour = #FF2222;

[TEXT_WHITE]
