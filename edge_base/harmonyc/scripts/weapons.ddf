<WEAPONS>

[CHAINSAW]

[SUPERSHOTGUN]

[CHAINGUN]
AMMOTYPE = BULLETS;
AMMOPERSHOT = 1;
AUTOMATIC = TRUE;
BINDKEY = 4;
PRIORITY = 5;
REFIRE_INACCURATE = TRUE;

STATES(UP) =
    CHGG:A:1:NORMAL:RAISE,#UP;

STATES(DOWN) =
    CHGG:A:1:NORMAL:LOWER,#DOWN;

STATES(READY) =
    CHGG:A:1:NORMAL:READY,#READY;

STATES(ATTACK) =
    SAWG:A:2:BRIGHT:SHOOT,
    PUNG:A:2:BRIGHT:SHOOT,
    CHGG:B:2:NORMAL:REFIRE,
    CHGG:B:0:NORMAL:PLAYSOUND(DBCLS),
    CHGG:A:2:NORMAL:NOTHING,
    CHGG:B:3:NORMAL:NOTHING,
    CHGG:A:4:NORMAL:NOTHING,
    CHGG:B:5:NORMAL:NOTHING,#READY;

STATES(FLASH) =
    CHGF:A:3:NORMAL:LIGHT1,
    SHTG:E:0:NORMAL:LIGHT0,#REMOVE;

ATTACK = PLAYER_CHAINGUN;