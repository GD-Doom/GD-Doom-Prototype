<STYLES>

#VERSION 1.00

[MAIN_MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="DOOM"; // "New Game", "options", "load", "save", "quit"
TEXT.SCALE=1.1;
ENTRY_SPACING=2;


[CHOOSE_SKILL] //New game/Choose Skill
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.FONT="DOOM"; //"New Game"
TITLE.FONT="DOOM"; // "Choose Skill"
TITLE.X_OFFSET=-40;
TEXT.FONT="DOOM"; //"I'm too young to die" etc.;
ENTRY_SPACING=2;
X_OFFSET=-10;

[OPTIONS]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.SCALE=1.2;
TEXT.FONT="EDGE3";
TEXT.COLOURMAP="TEXT_BLUE";
TEXT.SCALE=1.1;
ALT.FONT="EDGE3";
ALT.COLOURMAP="TEXT_WHITE";
ALT.SCALE=1.1;
TITLE.FONT="EDGE3";
TITLE.COLOURMAP="TEXT_GREY";
TITLE.SCALE=1.12;
HELP.FONT="EDGE3";
HELP.COLOURMAP="TEXT_RED";
HELP.SCALE=1.1;

//Now both Load and Save menu use the same style entry
//This one behaves different to other styles because as it's
//considered a System menu, I experimented with new ways
//of doing things.
[LOAD_SAVE_MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=55%;
SPECIAL=STRETCH_FULLSCREEN;
ENTRY_SPACING=4;
HEADER.FONT="EDGE3"; //"Load game"
HEADER.SCALE=2.0;
HEADER.COLOURMAP="TEXT_BLUE";
// save name & slot block
TEXT.FONT="EDGE3"; 
TEXT.COLOURMAP="TEXT_BLUE";
TEXT.SCALE=1.9;
TEXT.X_OFFSET=20;
TEXT.Y_OFFSET=40;
// save info text block
HELP.FONT="EDGE3"; 
HELP.COLOURMAP="TEXT_RED";
HELP.SCALE=1.1;
HELP.X_OFFSET=210;
HELP.Y_OFFSET=40;
// next page text block
TITLE.FONT="EDGE3"; 
TITLE.COLOURMAP="TEXT_GREY";
TITLE.SCALE=1.5;
TITLE.X_OFFSET=20;
TITLE.Y_OFFSET=160;
ALT.FONT="EDGE3";  // when we edit the save name
ALT.COLOURMAP="TEXT_WHITE";
ALT.SCALE=1.85;
// selected slot text
SELECTED.FONT="EDGE3";
SELECTED.COLOURMAP="TEXT_WHITE";
SELECTED.SCALE=1.92;

[HOST_NETGAME]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.FONT="EDGE3"; //items
HEADER.COLOURMAP="TEXT_BLUE";
HEADER.SCALE=1.25;
TEXT.FONT="EDGE3"; //items
TEXT.COLOURMAP="TEXT_BLUE";
TEXT.SCALE=1.1;
ALT.FONT="EDGE3"; //values / slider chars
ALT.COLOURMAP="TEXT_WHITE";
ALT.SCALE=1.1;
TITLE.FONT="EDGE3"; //Selected text
TITLE.COLOURMAP="TEXT_GREY";
TITLE.SCALE=1.12;
HELP.FONT="EDGE3"; //help tip at bottom of screen
HELP.COLOURMAP="TEXT_RED"; //"TEXT_GREEN";
HELP.SCALE=1.1;


[STATS]
TEXT.FONT="DOOM";
// don't apply any colourmap
ALT.FONT="DOOM";  // par times



 
 
 
 
 
 
 
